<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <%- include('partials/nav.ejs') %>

  <% if(locals.beers){ %>
  <div class="beers">
    <% beers.forEach(beer=>{ %>
    <div class="beer">
      <h1><%= beer.name %></h1>
      <p><%= beer.type %>, <%= beer.color %></p>
    </div>
    <% }) %>
  </div>
  <% } %>

</body>

</html>